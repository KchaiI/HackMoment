<div class="post-container">
    <div class="user-info">
      <img src="<%= @user.icon_url %>" alt="User Icon" class="user-icon">
      <strong><%= @user.name %></strong>
    </div>
    <img src="<%= @post.img %>" alt="Post Image" class="post-img">
    <p><%= @post.text %></p>
    <small>投稿日時: <%= @post.created_at.strftime("%Y-%m-%d %H:%M") %></small>
  </div>